{
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist app/ui_compiled",
    "build-common": "npx tsc ui/rpcChannels.ts --outDir app",
    "build": "npm run create-env && ng build && npm run build-common",
    "serve": "ng serve",
    "create-env": "node createEnv.js",
    "create-env-prod": "node createEnv.js",
    "build-prod": "npm run lint && bash -c \"npm run clean; npm run create-env-prod; ng build --configuration production; npm run build-common;\"",
    "electron": "electron app",
    "pack": "bash -c \"npm run build-prod; build --dir\"",
    "dist-win": "bash -c \"npm run build-prod; electron-builder --win squirrel --publish always\"",
    "dist-mac": "bash -c \"npm run build-prod; electron-builder --mac --publish always\"",
    "dist-linux": "bash -c \"npm run build-prod; electron-builder --linux --publish always\"",
    "postinstall": "install-app-deps",
    "lint": "ng lint",
    "lint-fix": "ng lint --fix"
  },
  "build": {
    "appId": "play.your.damn.turn.client",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.strategy-games",
      "artifactName": "playyourdamnturn-mac-${version}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "category": "StrategyGame",
      "artifactName": "playyourdamnturn-linux-${version}-${arch}.${ext}",
      "target": "AppImage"
    },
    "extraFiles": [
      "app/icon.png"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "repository": "https://github.com/pydt/client",
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.0.4",
    "@angular-eslint/builder": "^13.0.1",
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular-eslint/template-parser": "^13.0.1",
    "@angular/animations": "^13.0.3",
    "@angular/cli": "^13.0.4",
    "@angular/common": "^13.0.3",
    "@angular/compiler": "^13.0.3",
    "@angular/compiler-cli": "^13.0.3",
    "@angular/core": "^13.0.3",
    "@angular/forms": "^13.0.3",
    "@angular/language-service": "^13.0.3",
    "@angular/platform-browser": "^13.0.3",
    "@angular/platform-browser-dynamic": "^13.0.3",
    "@angular/router": "^13.0.3",
    "@types/lodash": "^4.14.178",
    "@types/pako": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "bootstrap-sass": "3.4.1",
    "core-js": "^3.6.5",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "electron-builder-lib": "^20.23.1",
    "electron-builder-squirrel-windows": "^22.14.5",
    "electron-notarize": "^1.1.1",
    "es6-shim": "^0.35.6",
    "eslint": "^8.4.1",
    "eslint-config-eslint": "^7.0.0",
    "eslint-plugin-jsdoc": "^37.1.0",
    "eslint-plugin-node": "^11.1.0",
    "font-awesome": "4",
    "lodash": "^4.17.21",
    "ngx-bootstrap": "^7.1.0",
    "ngx-markdown": "^13.0.0",
    "pako": "^2.0.4",
    "pydt-shared": "^1.7.2",
    "rollbar": "^2.24.0",
    "rxjs": "^7.4.0",
    "rxjs-tslint": "^0.1.8",
    "systemjs": "^6.3.2",
    "tslib": "^2.0.0",
    "typescript": "4.4.4",
    "webpack": "^5.65.0",
    "zone.js": "~0.11.4"
  }
}
