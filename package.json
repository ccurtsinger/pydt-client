{
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rimraf dist app/ui_compiled",
    "build-common": "npx tsc ui/rpcChannels.ts --outDir app",
    "build": "node createEnv.js && ng build && npm run build-common",
    "serve": "ng serve",
    "build-prod": "npm run lint && npm run clean && node createEnv.js && ng build",
    "electron": "electron app",
    "pack": "npm run build-prod && build --dir",
    "dist-win": "npm run build-prod && electron-builder --win --publish always",
    "dist-mac": "npm run build-prod && electron-builder --mac --publish always",
    "dist-linux": "npm run build-prod && electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "lint": "npm run build-common && ng lint",
    "lint-fix": "npm run build-common && ng lint --fix"
  },
  "build": {
    "appId": "play.your.damn.turn.client",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.strategy-games",
      "artifactName": "playyourdamnturn-mac-${version}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "category": "StrategyGame",
      "artifactName": "playyourdamnturn-linux-${version}-${arch}.${ext}",
      "target": "AppImage"
    },
    "extraFiles": [
      "app/icon.png"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "repository": "https://github.com/pydt/client",
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular-eslint/builder": "^15.1.0",
    "@angular-eslint/eslint-plugin": "^15.1.0",
    "@angular-eslint/eslint-plugin-template": "^15.1.0",
    "@angular-eslint/schematics": "^15.1.0",
    "@angular-eslint/template-parser": "^15.1.0",
    "@angular/animations": "^15.0.4",
    "@angular/cli": "^15.0.4",
    "@angular/common": "^15.0.4",
    "@angular/compiler": "^15.0.4",
    "@angular/compiler-cli": "^15.0.4",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.4",
    "@angular/language-service": "^15.0.4",
    "@angular/platform-browser": "^15.0.4",
    "@angular/platform-browser-dynamic": "^15.0.4",
    "@angular/router": "^15.0.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "bootstrap-sass": "^3.4.3",
    "core-js": "^3.27.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-builder-lib": "^20.23.1",
    "electron-notarize": "^1.2.2",
    "es6-shim": "^0.35.7",
    "eslint": "^8.30.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "font-awesome": "4",
    "lodash": "^4.17.21",
    "marked": "^4.2.5",
    "ngx-bootstrap": "^9.0.0",
    "ngx-markdown": "^15.0.0",
    "pako": "^2.1.0",
    "prettier": "^2.8.1",
    "prettier-eslint": "^15.0.1",
    "pydt-shared": "^1.8.0",
    "rimraf": "^3.0.2",
    "rollbar": "^2.26.0",
    "rxjs": "^7.5.5",
    "rxjs-tslint": "^0.1.8",
    "systemjs": "^6.13.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "webpack": "^5.72.1",
    "zone.js": "^0.11.5"
  }
}
